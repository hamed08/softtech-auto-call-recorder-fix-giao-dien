<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<TextView
	    android:id="@+id/tvIntro"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:gravity="center_horizontal"
	    android:text="ENTER 4 DIGIT TO LOGIN"
	    android:layout_marginTop="20dp"
	    android:textSize="@dimen/title"
	    android:textStyle="bold" />
    
   <LinearLayout
       android:id="@+id/lndigits"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:gravity="center_vertical|center_horizontal"
       android:orientation="horizontal"
       android:weightSum="3" >

 		<ImageView 
 		    android:id="@+id/imgDigit1"
 		    android:src="@drawable/rad_unchecked"
 		    android:layout_width="32dp"
 		    android:layout_height="32dp"
 		    android:layout_margin="5dp"
 		    />
 		<ImageView 
 		    android:id="@+id/imgDigit2"
  			android:layout_width="32dp"
 		    android:layout_height="32dp"
 		    android:src="@drawable/rad_unchecked"
 		    android:layout_margin="5dp"
 		    />
 
 		<ImageView 
 		    android:id="@+id/imgDigit3"
  			android:layout_width="32dp"
 		    android:layout_height="32dp"
 		    android:src="@drawable/rad_unchecked"
 		    android:layout_margin="5dp"
 		    />
 
 		<ImageView 
 		    android:id="@+id/imgDigit4"
  			android:layout_width="32dp"
 		    android:layout_height="32dp"
 		    android:src="@drawable/rad_unchecked"
 		    android:layout_margin="5dp"
 		    />
 
 
   </LinearLayout>

   <TextView
       android:id="@+id/tvNote"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:text="@null" />

   <LinearLayout
    android:id="@+id/one_to_three"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:weightSum="3" >

    <Button
        android:id="@+id/one_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="1"
        android:textSize="25sp" />
    <Button
        android:id="@+id/two_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="2"
        android:textSize="25sp" />

    <Button
        android:id="@+id/three_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableBottom="@drawable/line_width"
        android:background="@drawable/selector_button"
        android:text="3"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/four_to_six"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/one_to_three"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/four_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="4"
        android:textSize="25sp" />

    <Button
        android:id="@+id/five_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="5"
        android:textSize="25sp" />

    <Button
        android:id="@+id/six_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_button"
        android:drawableBottom="@drawable/line_width"
        android:text="6"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/seven_to_nine"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/four_to_six"
    android:orientation="horizontal"
    android:weightSum="3" >

    <Button
        android:id="@+id/seven_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="7"
        android:textSize="25sp" />

    <Button
        android:id="@+id/eight_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
         android:drawableBottom="@drawable/line_width"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="8"
        android:textSize="25sp" />

    <Button
        android:id="@+id/nine_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableBottom="@drawable/line_width"
        android:background="@drawable/selector_button"
        android:text="9"
        android:textSize="25sp" />
</LinearLayout>

<LinearLayout
    android:id="@+id/zero"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@+id/seven_to_nine"
    android:orientation="horizontal"
    android:weightSum="2.1" >

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:drawableRight="@drawable/line_height"
        android:background="@drawable/selector_button"
        android:text="Exit"
        android:textSize="30sp" />

    <Button
        android:id="@+id/zero_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/selector_button"
        android:drawableRight="@drawable/line_height"
        android:text="0"
        android:textSize="25sp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Back"
        android:background="@drawable/selector_button"
        android:layout_weight="0.7"
        android:textSize="25sp" />

</LinearLayout>

</LinearLayout>
